		"lucide-react": "^0.378.0",
		"million": "^3.0.6",
		"react": "^18.2.0",
		"react-day-picker": "^8.10.1",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.49.3",
		"react-resizable-panels": "^2.0.19",
		"tailwind-merge": "^2.3.0",
		"tailwindcss-animate": "^1.0.7",
